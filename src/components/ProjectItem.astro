---
import Arrow from "../icons/DiagonalArrow.astro";
const { title, subtitle, portada } = Astro.props;
---

<div class="flex flex-col">
  <div class="flex justify-between p-8">
    <div class="">
      <h2 class="text-5xl font-semibold tracking-tight">{title}</h2>
      <h3 class="text-4xl font-semibold tracking-tight">{subtitle}</h3>
    </div>
    <div
      class="size-20 flex justify-center flex-col items-center bg-white text-black hover:bg-inherit hover:text-white trasition duration-300 rounded-full"
    >
      <button class=""><Arrow /></button>
    </div>
  </div>
  <div class="p-2 h-auto max-w-auto">
    <img class="object-cover rounded-3xl" src={portada} alt="" />
  </div>
</div>
