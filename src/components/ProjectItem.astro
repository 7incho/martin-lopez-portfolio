---
import Arrow from "../icons/DiagonalArrow.astro";
const { title, subtitle, portada, link } = Astro.props;
---

<div class="flex flex-col">
  <div class="flex justify-between p-8">
    <div class="">
      <h2 class="text-5xl font-semibold tracking-tight">{title}</h2>
      <h3 class="text-4xl font-semibold tracking-tight">{subtitle}</h3>
    </div>
    <div
      class="size-20 flex justify-center items-center bg-white text-black hover:bg-inherit hover:text-white transition duration-300 rounded-full"
    >
      <a
        href={link}
        target="_blank"
        class="w-full h-full flex justify-center items-center"><Arrow /></a
      >
    </div>
  </div>
  <picture class="p-2 w-full h-auto flex-none">
    <a
      href={link}
      target="_blank"
      class="w-full h-full flex justify-center items-center"
      ><img class="object-cover rounded-3xl" src={portada} alt="" /></a
    >
  </picture>
</div>
