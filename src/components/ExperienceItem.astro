---
interface Props {
  date: string;
  title: string;
  description: string;
  descriptionplus: string;
  link: string;
}
const { date, title, description, descriptionplus, link } = Astro.props;
---

<div class="flex items-center">
  <div
    class="z-10 flex items-center justify-center w-6 h-6 rounded-full ring-0 ring-white bg-orange-600 sm:ring-8 dark:ring-zinc-900 shrink-0"
  >
  </div>
  <div class="hidden sm:flex w-full bg-gray-200 h-0.5 dark:bg-gray-500"></div>
</div>
<div class="mt-3 sm:pe-8">
  <h3 class="text-5xl font-semibold text-gray-500 dark:text-white">{title}</h3>
  <time class="block mb-2 text-3xl font-semibold leading-none text-gray-400"
    >{date}</time
  >
  <p class="text-4xl font-normal text-gray-500 dark:text-white text-pretty">
    {description}
    <span class="text-gray-400">{descriptionplus}</span>
  </p>
</div>
